
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


    <h4 class="new-cycle text-center">Welcome to Team 3's web app</h4>

  
  <div class="row col-sm-10 col-sm-offset-3 col-md-10 col-md-offset-3">
    <div class="navbar-form navbar-left" role="search" >
      <%= form_tag root_path, method: :get do %>

      <%= search_field_tag :address, nil,
      placeholder: "Enter Location", class: "form-control"%>
      <%= search_field_tag :artist, nil,
      placeholder: "Enter Artist", class: "form-control" %>
      
      
        <%= submit_tag "Submit", class: "btn btn-success" %>
      
      <% end %>
    </div>
  </div>

<!-- search form here -->

<hr>


<br>
<div class="row">
    <div class="col-sm-12">
        <h3 class="text-center">
          <% unless flash %>
            Showing <%= @events.size if @events %> results
            <%= "for #{@artist} near #{@origin}" %>
          <% end %>
        </h3>
    </div>
  <div class="col-sm-10 col-sm-offset-1">
    <div style='width: 800px;'>
      <div id="map" style='width: 800px; height: 400px;'></div>
    </div>
  </div>
</div>
<br>
<br>
<script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });
</script>